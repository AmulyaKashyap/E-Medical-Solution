 <% if(! locals.user){%>  <!--Login Form-->
<section class="LoginModal">
    <div class="wrapper">
    <div class="form-container modal" id="loginF" style="height: auto; overflow: hidden;">
      <div class="slide-controls">
         <input type="radio" name="slide" id="loginP" checked>
         <input type="radio" name="slide" id="loginD">
         <label for="loginP" class="slide loginP">Patient</label>
         <label for="loginD" class="slide loginD">Doctor</label>
         <div class="slider-tab"></div>
      </div>
      <div class="form-inner">
         <form action="/users/create-session" class="loginP" method="post">
            <div class="field">
               <input type="email" name="email" placeholder="Email Address" required>
            </div>
            <div class="field">
               <input type="password" name="pass" placeholder="Password" required>
            </div>
            <div class="pass-link">
               <a href="/forgotPass">Forgot password?</a>
            </div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" value="Login">
            </div> 
            <div class="signup-link" style="font-size: 1.5rem;">
               Not a member? <a href="" style="font-size: 1.5rem;">Signup now</a>
            </div>
            <div class="col s12 m6 offset-m3 center-align">
              <a class="oauth-container btn darken-4 white black-text" href="/users/authentication/google" style="text-transform:none">
                Login with
                  <div class="right">
                      <img width="30px" style="margin-top:7px; margin-right:19px; margin-left: -10px;" alt="Google sign-in" 
