          </div>
          <div class="col s12 m6 offset-m3 center-align">
            <a class="oauth-container btn darken-4 white black-text" href="#" style="text-transform:none">
              Login with
                <div class="right">
                    <img width="30px" style="margin-top:7px; margin-right:19px; margin-left: -10px;" alt="Google sign-in" 
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
                </div>
            </a>
        </div>
       </form>
      </div>
   </div>
  </div>
  </section>


 <!--Sign UP Modal-->
 <section class="signupModal">
   <div class="container modal" id="modalSign">
      <div class="modal-content form-container sign-up-container">
         <form action="/doctors/create" method="POST">
            <h1 class="subheading-two" style="font-size: 1.8rem; margin: 0px;">As Doctor</h1>
            <div class="social-container">
               <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
               <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
            </div>
            <span>or use your email for registration</span>
         <input type="text" class="validate" name="fname" placeholder="First Name"  required/>
         <input type="text" class="validate" name="lname" placeholder="Last Name"  required/>
            <input type="email" class="validate" name="email" placeholder="Email" required />
            <input type="password" class="validate" name="pass" placeholder="Password" required />
         <input type="password"class="validate"  name="cpass" placeholder="Confirm Password" required />
            <button>Sign Up</button>
         </form>
      </div>
      <div class="form-container sign-in-container">
         <form action="/users/create" method="POST">
            <h1 class="subheading-two" style="font-size: 1.8rem; margin: 10px;">As Patient</h1>
            <div class="social-container">
               <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
               <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
            </div>
            <span>or use your email for registration</span>
         <input type="text" class="validate" required  name="fname" placeholder="First Name" />
         <input type="text" class="validate"  required name="lname" placeholder="Last Name" />
            <input type="email" class="validate"  required name="email" placeholder="Email" />
            <input type="password" class="validate"  required name="pass" placeholder="Password" />
               <input type="password" class="validate" required  name="cpass" placeholder="Confirm Password" />
            <button>Sign In</button>
         </form>
      </div>
      <div class="overlay-container">
         <div class="overlay">
            <div class="overlay-panel overlay-left">
               <h1 class="subheading-two white-text" style="font-size: 1.8rem;">Hello, Doctor !</h1>
               <p>Enter your personal details and keep connected with your patients.</p>
               <button class="ghost" id="signIn">If Patient</button>
            </div>
            <div class="overlay-panel overlay-right">
               <h1 class="subheading-two white-text" style="font-size: 1.8rem;">Hello, Friend!</h1>
               <p>Enter your personal details and start journey with us</p>
               <button class="ghost" id="signUp">If Doctor</button>
            </div>
         </div>
      </div>
   </div>
   </section>
<%}%> 
 
